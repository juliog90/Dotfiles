client.urgent               $rd        $rd         $tx

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
	# names not numbers
	strip_workspace_numbers yes

          colors {
           background #1D172B
           statusline #DADADA
           separator #1D172B
           #                  border  backgr. text
           focused_workspace  #4E316B #562877 #E9DEEE
           active_workspace   #833582 #5f676a #ffffff
           inactive_workspace #333333 #74657E #390A4E
           urgent_workspace   #2F343A #862638 #ffffff
        }

        font pango:Ubuntu Sans 8
        position top
}

